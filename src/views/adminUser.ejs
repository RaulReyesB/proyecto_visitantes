<!DOCTYPE html>
<html lang="es">

<head>
  <title>
    <%= namePage %>
  </title>
  <link rel="stylesheet" href="/css/styleAdminUser.css">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <div id="var">
    <div>
        <img src="/img/radioytvlogo.png" alt="">
    </div>
    <h1>
        <%= description %>
    </h1>

    <div class="enlaces">
        <a href="/registroInternos">Pasantes</a>
        <a href="/registroVisitas">Registros</a>
        <a href="/historial">Historial de visitantes</a>
        <a href="/registrosPendientes">Pendientes de Salida</a>
        <a href="/registroUsuario">Registrar Usuario</a>
        <a href="/AdmistrarUsuario">Control de Usuarios</a>
    </div>
    <div class="menu-hamburguesa bg-primary">
        <div class="hamburguesa-icono"></div>
    </div>
    <a href="/inicio">
      <svg class="home" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="55" height="55" viewBox="0 0 64 64">
        <path d="M 32 3 L 1 28 L 1.4921875 28.654297 C 2.8591875 30.477297 5.4694688 30.791703 7.2304688 29.345703 L 32 9 L 56.769531 29.345703 C 58.530531 30.791703 61.140812 30.477297 62.507812 28.654297 L 63 28 L 54 20.742188 L 54 8 L 45 8 L 45 13.484375 L 32 3 z M 32 13 L 8 32 L 8 56 L 56 56 L 56 35 L 32 13 z M 26 34 L 38 34 L 38 52 L 26 52 L 26 34 z"></path>
        </svg>
    </a>
</div>
  <br>
  <table id="tabla" class="fade-in table table-hover">
    <thead class="thead-gray">
      <tr>
        <th>Nombre</th>
        <th>Contraseña</th>
        <th>Tipo de usuario</th>
        <th>Estatus</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% user.forEach(function(item) { %>
        <tr>
          <td>
            <%= item.name %>
          </td>
          <td>
            <%= item.password %>
          </td>
          <td>
            <%= item.type %>
          </td>
          <td>
            <%= item.status ? 'ALTA':'BAJA' %>
          </td>
          <td>
            <a href="/upd">
              <button id="toggleButton<%= item.id %>" onclick="toggleStatus('<%= item.id %>')">
                <%= item.status ? 'Dar de baja':'Dar de alta' %>
              </button>
            </a>
            <a href="/AdmistrarUsuario/<%= item.id %>"><button>Editar</button></a>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>

  <script>
    function toggleStatus(userId) {
      const button = document.getElementById(`toggleButton${userId}`);
      const currentStatus = button.textContent.trim(); // Obtener el texto actual del botón

      // Realizar una solicitud fetch para cambiar el estado del usuario
      fetch(`/toggleStatus/${userId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
      })
        .then(response => {
          if (response.ok) {
            // Cambiar el texto del botón según el estado actual del usuario
            button.textContent = currentStatus === "Dar de baja" ? "Dar de alta" : "Dar de baja";
          } else {
            throw new Error('Hubo un problema al cambiar el estado del usuario');
          }
        })
        .catch(error => {
          console.error('Error al cambiar el estado del usuario:', error);
        });
    }
  </script>
  <footer class="bg-body-tertiary text-center text-lg-start">
    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
      © 2024 Copyright:
      
    </div>
    <!-- Copyright -->
  </footer>
</body>

</html>