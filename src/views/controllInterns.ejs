<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= namePage %></title>
  <!-- Agregar la biblioteca Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Agregar Bootstrap 4.1.3 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="stylesheet" href="/css/styleAdminUser.css">
</head>

<body>
  <nav id="var">
    <div>
      <a href="/inicio" style="display: flex;">
        <img src="/img/radioytvlogo.png" alt="Logo">
      </a>
    </div>
    <div class="enlaces">
      <a href="/registroInternos">Pasantes</a>
      <% if (user && user.type !== 'rh') { %>
        <a href="/registroVisitas">Registros</a>
        <a href="/historial">Historial de visitantes</a>
        <a href="/registrosPendientes">Pendientes de Salida</a>
        <a href="/registroUsuario">Registrar Usuario</a>
        <a href="/AdmistrarUsuario">Control de Usuarios</a>
        <a href="/hr-visits">Recursos Humanos</a>
        <a href="/historialInternos">Historial de pasante</a>
        <a href="/controlPasantes">Control de Pasantes</a>
      <% } %>
    </div>
    <div class="menu-hamburguesa" id="menuHamburguesa">
      <div class="hamburguesa-icono"></div>
      <div class="hamburguesa-icono"></div>
      <div class="hamburguesa-icono"></div>
    </div>
  </nav>

  <div class="cont-title">
    <h1><%- namePage %></h1>
  </div>
  <table id="tabla">
    <thead class="thead-gray">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>NÃºmero de Folio</th>
            <th>Imagen</th>
            <th>Control de Entrada y Salida</th>
          </tr>
        </thead>
        <tbody>
          <% interns.forEach(function(intern) { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.fileNumber %></td>
            <td>
              <% if (item.img) { %>
              <img src="<%= item.img %>" alt="Imagen de <%= item.name %>" style="width: 100px; height: auto;">
              <% } else { %>
              No hay imagen disponible
              <% } %>
            </td>
            <td>
              <% if (!item.entrance) { %>
              <form action="/interns/entrada/<%= item.id %>" method="POST">
                <button type="submit" class="btn btn-primary">Registrar Entrada</button>
              </form>
              <% } else if (!item.exit) { %>
              <form action="/interns/salida/<%= item.id %>" method="POST">
                <button type="submit" class="btn btn-primary">Registrar Salida</button>
              </form>
              <% } else { %>
              Registrado
              <% } %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
  </table>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    document.getElementById('menuHamburguesa').addEventListener('click', function() {
      const enlaces = document.querySelector('.enlaces');
      enlaces.classList.toggle('active');
    });
  </script>
</body>

</html>
