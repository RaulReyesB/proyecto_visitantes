<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= namePage %></title>
  <link rel="stylesheet" href="/css/styleAdminUser.css">
</head>

<body>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Numero de Folio</th>
        <th>Imagen</th>
        <th>Control de Entrada y Salida</th>
      </tr>
    </thead>
    <tbody>
      <% internt.forEach(function(item) { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.fileNumber %></td>
          <td><img src="<%= item.img %>" alt="Imagen de <%= item.name %>"></td>
          <td>
            <% if (!item.entrance) { %>
              <!-- Si no hay entrada registrada, mostrar botÃ³n de entrada -->
              <form action="/interns/entrada/<%= item.id %>" method="POST">
                <button type="submit">Registrar Entrada</button>
              </form>
            <% } else if (!item.exit) { %>
              <!-- Si hay entrada pero no hay salida, mostrar botÃ³n de salida -->
              <form action="/interns/salida/<%= item.id %>" method="POST">
                <button type="submit">Registrar Salida</button>
              </form>
            <% } else { %>
              <!-- Si ya hay entrada y salida registradas, mostrar mensaje -->
              Registrado
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>

</html>
