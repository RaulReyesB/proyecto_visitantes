<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= namePage %></title>
  <!-- Agregar la biblioteca Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styleEdituser.css">
</head>

<body style="font-family: 'Poppins', sans-serif; background-image: url('https://chij3.s3.amazonaws.com/images/atractivos/a.8175e459d0eca153e2bdc51c9a03c17d.png');">
  <!-- contenido del encabezado -->
  <div id="var">
    <h1>
      Editar datos de los usuarios del sistema
    </h1>
    <div class="enlaces">
      <a href="">Pasantes</a>
      <a href="">Registros</a>
      <a href="">Historial de visitantes</a>
      <a href="">Pendientes de Salida</a>
      <a href="">Registrar Usuario</a>
      <a href="">Control de Usuarios</a>
    </div>
  </div>  
  <!-- contenedor principal -->
  <div class="container">
    <div class="cont-title">
  <h1>Editar Usuario</h1>
</div>
<!-- contenedor del formulario -->
<div class="container-form">
  <form action="/AdmistrarUsuario/<%= user.id %>" method="POST">
    <div class="form-p">
      <label for="name">Nombre:</label>
      <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
    </div>
    <div class="form-p">
      <label for="password">Contraseña:</label>
      <div class="ojo">
        <!-- Usar un icono de ojo abierto/cerrado -->
        <input class="form-control" type="password" id="password" name="password">
        <button type="button" onclick="togglePassword()">
          <i id="eyeIcon" class="far fa-eye"></i>
        </button>
      </div>
    </div>
    <div class="form-p">
      <label for="type">Tipo de Usuario:</label>
      <select class="form-control" id="typeUser" name="type">
        <option value="administrador" <%= user.type === 'administrador' ? 'selected' : '' %>>Administrador</option>
        <option value="usuario" <%= user.type === 'usuario' ? 'selected' : '' %>>Usuario</option>
        <option value="superUsuario" <%= user.type === 'superUsuario' ? 'selected' : '' %>>Super Usuario</option>
      </select>
    </div>
      <input class="btn btn-lg button" type="submit" value="Guardar Cambios">
    
  </form>

  <script>
    // Función para mostrar/ocultar la contraseña
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const eyeIcon = document.getElementById('eyeIcon');
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.remove('far', 'fa-eye');
        eyeIcon.classList.add('far', 'fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        eyeIcon.classList.remove('far', 'fa-eye-slash');
        eyeIcon.classList.add('far', 'fa-eye');
      }
    }
  </script>
  </div>
  </div>
</body>

</html>
