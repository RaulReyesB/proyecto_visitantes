<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= namePage %>
  </title>
  <!-- Agregar la biblioteca Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
  <h1>Editar Usuario</h1>
  <form action="/AdmistrarUsuario/<%= user.id %>" method="POST">
    <div>
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" value="<%= user.name %>">
    </div>
    <div>
      <label for="password">Contrase√±a:</label>
      <div>
        <!-- Usar un icono de ojo abierto/cerrado -->
        <input type="password" id="password" name="password" value="<%= user.password %>">
        <button type="button" onclick="togglePassword()">
          <i id="eyeIcon" class="far fa-eye"></i>
        </button>
      </div>
    </div>
    <div>
      <label for="type">Tipo de Usuario:</label>
      <select id="typeUser" name="type">
        <option value="administrador" <%= user.type === 'admin' ? 'selected' : '' %>>Administrador</option>
        <option value="usuario" <%= user.type === 'user' ? 'selected' : '' %>>Usuario</option>
        <option value="superUsuario" <%= user.type === 'super' ? 'selected' : '' %>>Super Usuario</option>
      </select>
    </div>
    <div>
      <label for="status">Estatus:</label>
      <select id="status1" name="status">
        <option value="true" <%= user.status === 'activo' ? 'selected' : '' %>>Alta</option>
        <option value="false" <%= user.status === 'inactivo' ? 'selected' : '' %>>Baja</option>
      </select>
        
  </div>
      <button type="submit">Guardar Cambios</button>
    
  </form>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const eyeIcon = document.getElementById('eyeIcon');
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.remove('far', 'fa-eye');
        eyeIcon.classList.add('far', 'fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        eyeIcon.classList.remove('far', 'fa-eye-slash');
        eyeIcon.classList.add('far', 'fa-eye');
      }
    }
  </script>
</body>

</html>