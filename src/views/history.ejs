<!DOCTYPE html>
<html lang="es">

<head>
  <title>
    <%= namePage %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styleHistoryVi.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>

  <div id="var">
    <h1>
      <%= descripcion %>
    </h1>
    <div class="enlaces">
      <a href="">Pasantes</a>
      <a href="">Inicio</a>
      <a href="">Registros</a>
    </div>
  </div>

  <div id="buscador">
    <div class="search-container">
      <input type="text" id="searchInput" placeholder="Buscar...">
      <select id="searchType">
        <option value="name">Nombre</option>
        <option value="curp">CURP</option>
      </select>
      <button type="button" onclick="search()"><i class="bi bi-search"></i></button>
    </div>

    <select id="opcionesSelect" onchange="filter()">
      <option value="hoy">Hoy</option>
      <option value="semana">Esta semana</option>
      <option value="mes">Este mes</option>
      <option value="alfabetico">Orden alfabético</option>
    </select>

  </div>

  <table id="tabla">
    <thead class="thead-gray">
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Curp</th>
        <th>Identificación</th>
        <th>Departamento</th>
        <th>Procedencia</th>
        <th>Niños</th>
        <th>Gafete</th>
        <th>Fecha y Hora de entrada</th>
        <th>Fecha y Hora de salida</th>
      </tr>
    </thead>
    <tbody>
      <% registros.forEach(function(item) { %>
        <tr>
          <td>
            <%= item.name %>
          </td>
          <td>
            <%= item.phone %>
          </td>
          <td>
            <%= item.email %>
          </td>
          <td>
            <%= item.CURP %>
          </td>
          <td>
            <%= item.identification %>
          </td>
          <td>
            <%= item.department %>
          </td>
          <td>
            <%= item.origin %>
          </td>
          <td>
            <%= item.children %>
          </td>
          <td>
            <%= item.badge %>
          </td>
          <td>
            <%= item.entrance %>
          </td>
          <td>
            <%= item.exit %>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>

  <script>
    function search() {
      var input, filter, searchType, table, tr, td, i, txtValue;
      input = document.getElementById("searchInput");
      filter = input.value.toUpperCase();
      searchType = document.getElementById("searchType").value;
      table = document.getElementById("tabla");
      tr = table.getElementsByTagName("tr");
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[0]; // Filtro por primera columna (nombre)
        curpTd = tr[i].getElementsByTagName("td")[3]; // Filtro por cuarta columna (CURP)
        if (td && curpTd) {
          if (searchType === 'name') {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          } else if (searchType === 'curp') {
            curpTxtValue = curpTd.textContent || curpTd.innerText;
            if (curpTxtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }
    }
  </script>
</body>

</html>