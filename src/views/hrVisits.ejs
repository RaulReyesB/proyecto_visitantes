<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= namePage %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styleHistoryVi.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
  <div id="var">
    <div>
        <img src="/img/tiempo.png" alt="">
    </div>
    <h1>
        <%= description %>
    </h1>

    <div class="enlaces">
        <a href="/registroInternos">Pasantes</a>
        <a href="/registroVisitas">Registros</a>
        <a href="/historial">Historial de visitantes</a>
        <a href="/registrosPendientes">Pendientes de Salida</a>
        <a href="/registroUsuario">Registrar Usuario</a>
        <a href="/AdmistrarUsuario">Control de Usuarios</a>
    </div>

    <a href="/inicio">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="55" height="55"><path d="M11.03 2.59a1.501 1.501 0 0 1 1.94 0l7.5 6.363a1.5 1.5 0 0 1 .53 1.144V19.5a1.5 1.5 0 0 1-1.5 1.5h-5.75a.75.75 0 0 1-.75-.75V14h-2v6.25a.75.75 0 0 1-.75.75H4.5A1.5 1.5 0 0 1 3 19.5v-9.403c0-.44.194-.859.53-1.144ZM12 3.734l-7.5 6.363V19.5h5v-6.25a.75.75 0 0 1 .75-.75h3.5a.75.75 0 0 1 .75.75v6.25h5v-9.403Z"></path></svg>
    </a>
</div>

    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Buscar...">
        <button type="button" onclick="search()"><i class="bi bi-search"></i></button>
    </div>

    <table id="tabla" class="fade-in">
        <thead class="thead-gray">
            <tr>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Correo Electrónico</th>
                <th>CURP</th>
                <th>Identificación</th>
                <th>Origen</th>
                <th>Niños</th>
                <th>Número de Pase</th>
                <th>Fecha de Entrada</th>
                <th>Fecha de Salida</th>
            </tr>
        </thead>
        <tbody>
            <% visits.forEach(visit => { %>
                <tr>
                    <td><%= visit.name %></td>
                    <td><%= visit.phone %></td>
                    <td><%= visit.email %></td>
                    <td><%= visit.CURP %></td>
                    <td><%= visit.identification %></td>
                    <td><%= visit.origin %></td>
                    <td><%= visit.children %></td>
                    <td><%= visit.badge %></td>
                    <td><%= visit.entrance %></td>
                    <td><%= visit.exit %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <script>
        document.getElementById('searchInput').addEventListener('input', function() {
          const searchValue = this.value.toLowerCase();
          const table = document.getElementById('tabla');
          const rows = table.getElementsByTagName('tr');
    
          for (let i = 1; i < rows.length; i++) {
            const cells = rows[i].getElementsByTagName('td');
            const name = cells[0].textContent || cells[0].innerText;
            const entranceDate = cells[9].textContent || cells[9].innerText;
            const curp = cells[3].textContent || cells[3].innerText;
    
            if (name.toLowerCase().indexOf(searchValue) > -1 || entranceDate.toLowerCase().indexOf(searchValue) > -1 || curp.toLowerCase().indexOf(searchValue) > -1) {
              rows[i].style.display = '';
            } else {
              rows[i].style.display = 'none';
            }
          }
        });
      </script>
</body>
</html>
