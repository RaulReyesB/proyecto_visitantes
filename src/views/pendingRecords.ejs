<!DOCTYPE html>
<html>

<head>
  <title><%= namePage %></title>
</head>

<body>
  <p><%= descripcion %></p>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Curp</th>
        <th>Identificación</th>
        <th>Departamento</th>
        <th>Procedencia</th>
        <th>Niños</th>
        <th>Gafete</th>
        <th>Fecha y Hora de entrada</th>
        <th>Finalizar registro</th>
      </tr>
    </thead>
    <tbody>
      <% registros.forEach(function(item) { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.phone %></td>
          <td><%= item.email %></td>
          <td><%= item.CURP %></td>
          <td><%= item.identification %></td>
          <td><%= item.department %></td>
          <td><%= item.origin %></td>
          <td><%= item.children %></td>
          <td><%= item.badge %></td>
          <td><%= item.entrance %></td>
          <td>
            <a href="/finalizarRegistro/<%= item.id %>" class="finalizar-registro" data-id="<%= item.id %>">Finalizar registro</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<script src="/src/controllers/pendingRecords.controllers.js"></script>
</body>

</html>
