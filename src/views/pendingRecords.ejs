<!DOCTYPE html>
<html>

<head>
  <title><%= namePage %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/stylePendient.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
</head>

<body>
  <div id="var">
    <div>
        <img src="/img/tiempo.png" alt="">
    </div>
    <h1>
        <%= descripcion %>
    </h1>

    <div class="enlaces">
        <a href="/registroInternos">Pasantes</a>
        <a href="/registroVisitas">Registros</a>
        <a href="/historial">Historial de visitantes</a>
        <a href="/registrosPendientes">Pendientes de Salida</a>
        <a href="/registroUsuario">Registrar Usuario</a>
        <a href="/AdmistrarUsuario">Control de Usuarios</a>
    </div>

    <a id="homeR" href="/inicio">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
        <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5"/>
      </svg>
    </a>
</div>

<!--  Contenedor principal  -->
<div class="container">

  <div class="search-container">
    <input type="text" id="searchInput" placeholder="Buscar...">
    <button type="button" onclick="search()"><i class="bi bi-search"></i></button>
  </div>
<br>
  <table id="tabla">
    <thead class="thead-gray">
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Curp</th>
        <th>Identificación</th>
        <th>Departamento</th>
        <th>Procedencia</th>
        <th>Niños</th>
        <th>Gafete</th>
        <th>Numero De Gafete</th>
        <th>Fecha y Hora de entrada</th>
        <th>Finalizar registro</th>
      </tr>
    </thead>
    <tbody>
      <% registros.forEach(function(item) { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.phone %></td>
          <td><%= item.email %></td>
          <td><%= item.CURP %></td>
          <td><%= item.identification %></td>
          <td><%= item.department %></td>
          <td><%= item.subDepartment %></td>
          <td><%= item.origin %></td>
          <td><%= item.children %></td>
          <td><%= item.badge %></td>
          <td><%= item.entrance %></td>
          <td>
            <a id="cerrar" class=" btn btn-success" href="/finalizarRegistro/<%= item.id %>" class="finalizar-registro" data-id="<%= item.id %>" onclick="alert('visita completada')"><i class="bi bi-x-lg"></i></a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<script src="/src/controllers/pendingRecords.controllers.js"></script>
</body>

</html>
