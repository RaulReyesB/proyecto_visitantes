<!DOCTYPE html>
<html>

<head>
  <title><%= namePage %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/stylePendient.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
  <div id="var">
    
    <h1><%= descripcion %></h1>
    <div class="enlaces">
      <a href="/historyInterns">Pasantes</a>
      <a href="/registroVisitas">Registros</a>
      <a href="/historial">Historial de visitantes</a>
      <a href="/registrosPendientes">Pendientes de Salida</a>
      <a href="/registroUsuario">Registrar Usuario</a>
      <a href="/AdmistrarUsuario">Control de Usuarios</a>
    </div>
  </div>
  <div class="search-container">
    <input type="text" id="searchInput" placeholder="Buscar...">
    <button type="button" onclick="search()"><i class="bi bi-search"></i></button>
  </div>
<br>
  <table id="tabla">
    <thead class="thead-gray">
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Curp</th>
        <th>Identificación</th>
        <th>Departamento</th>
        <th>Procedencia</th>
        <th>Niños</th>
        <th>Gafete</th>
        <th>Numero De Gafete</th>
        <th>Fecha y Hora de entrada</th>
        <th>Finalizar registro</th>
      </tr>
    </thead>
    <tbody>
      <% registros.forEach(function(item) { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.phone %></td>
          <td><%= item.email %></td>
          <td><%= item.CURP %></td>
          <td><%= item.identification %></td>
          <td><%= item.department %></td>
          <td><%= item.subDepartment %></td>
          <td><%= item.origin %></td>
          <td><%= item.children %></td>
          <td><%= item.badge %></td>
          <td><%= item.entrance %></td>
          <td>
            <a class=" btn btn-success" href="/finalizarRegistro/<%= item.id %>" class="finalizar-registro" data-id="<%= item.id %>" onclick="alert('visita completada')">Finalizar registro</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<script src="/src/controllers/pendingRecords.controllers.js"></script>
</body>

</html>
